<body>
  <div id="navbar1">

    <h1> BookBound </h1>

    <ul>
      <li><a href="/aboutus">About Us</a></li>
      <li><a href="/bookmark">Bookmark</a></li>
      <li><a href="/adminlogin">Edit</a></li>
    </ul>
    
  </div>

  <div id="navbar2">
    
        <h2> Library </h2>

        <form id="searchbar" action="/searchbar" class="d-flex">
          <input class="form-control me-2" name="search_bar" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search  <i class="fa-solid fa-magnifying-glass"></i> </button>
        </form>

        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" data-bs-auto-close="outside" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            &nbsp; <i class="fa-solid fa-filter"></i> Filter &nbsp;
          </button>

          <form id="filter" action="/" method="GET">
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li><a class="dropdown-item" href="#" onclick="selectedOption('alphabetically')">Alphabetically</a></li>
              <li><a class="dropdown-item" href="#" onclick="selectedOption('lastAdded')">Last Added(default)</a></li>
              <li><a class="dropdown-item" href="#" onclick="selectedOption('ratingHighToLow')">Rating- High to Low</a></li>
              <li><a class="dropdown-item" href="#" onclick="selectedOption('ratingLowToHigh')">Rating- Low to High</a></li>
              <li class="dropend">
                <a class="dropdown-item dropdown-toggle" data-bs-toggle="dropdown" href="#">Genre</a>
                <ul class="dropdown-menu">
                  <li><a href="#" class="dropdown-item" onclick="selectedOption('romance')">Romance</a></li>
                  <li><a href="#" class="dropdown-item" onclick="selectedOption('life')">Life</a></li>
                  <li><a href="#" class="dropdown-item" onclick="selectedOption('mystery')">Mystery</a></li>
                  <li><a href="#" class="dropdown-item" onclick="selectedOption('thriller')">Thriller</a></li>
                  <li><a href="#" class="dropdown-item" onclick="selectedOption('sci-fi')">Sci-fi</a></li>
                  <li><a href="#" class="dropdown-item" onclick="selectedOption('kids')">Kids</a></li>
                  <li><a href="#" class="dropdown-item" onclick="selectedOption('adventure')">Adventure</a></li>
                </ul>
              </li>
            </ul>
            <input type="hidden" name="sortlist" id="pressedbtn">
          </form>
        </div>
  </div>

  <script>
    function selectedOption(chosenOption) {
      const optionInput = document.getElementById('pressedbtn');
      optionInput.value = chosenOption;
      document.getElementById('filter').submit();
    }
  </script>


  

  
    
    
  
